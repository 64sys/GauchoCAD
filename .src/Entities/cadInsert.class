'' Creo los puntos de interes
'' Build point of interest

Public Function BuildPOI(oE As Entity, Optional arrIndex As Integer = -1) As Integer

  If arrIndex < 0 Then arrIndex = appmain.hFCAD.arrEntities.Max       ' si este valor no es provisto , estos POI son de la ultima entidad

  oe.PoiPoints.Clear
  oe.PoiType.Clear

  ' points
  oe.poiPoints.insert([oE.p[0], oE.p[1]])
  oe.poiType.Add(gcd.poiBasePoint)
  'oe.poiEntities.Add(arrIndex)

End

' This function will return False if the element couldn't be created for some reason: bad or incomple user input
' True means all is good, False will instruct the clsEntityBuilder to delete it
Public Sub Finish(oE As Entity, Optional ParamsDone As Integer = -1) As Boolean

  Dim ET As Entity, i, iInsert As Integer

  'Print "Finish en EntityBase"

  BuildPOI(oe)

  ' busco el tipo de linea, si hace falta
  If oE.LineTypeName = "Dashed" Then oE.LineType = 1

  oE.psel.resize(oE.p.count / 2)
  oE.ForDeletion = False
  oE.DrawAble = True
  oE.Selected = False
  oE.Finished = True

  i = clsEntities.FIndBlockID(oE.Block)
  If i < 0 Then Return

  ' en este momento la ultima entidad es este Insert, guardo el numero
  iInsert = appmain.hFCAD.arrEntities.Max

  ' hay un caso particular: cuando un bloque contiene un Insert, debo prevenir esta situacion
  If iInsert >= 0 Then

    ' esta linea no haria falta
    'appmain.hFCAD.arrEntities.Last.iInsert = iInsert
    For Each ET In appmain.hFCAD.arrBlocks[i].entities
      appmain.hFCAD.arrEntities.Add(clsEntities.ClonEntity(et))
      'appmain.hFCAD.arrEntities.Last.Block = oe.block
      appmain.hFCAD.arrEntities.Last.iInsert = iInsert

      ' ------------------------------ ERROR TODO: verificar esto, lo puse para evitar recursividad infinita
      appmain.hFCAD.arrEntities.Last.ClassHandler.finish(appmain.hFCAD.arrEntities.Last, -1)

      appmain.hFCAD.arrEntities.Last.ClassHandler.Scale(appmain.hFCAD.arrEntities.Last, oe.fParam[0], oE.fParam[1])
      appmain.hFCAD.arrEntities.Last.ClassHandler.Rotate(appmain.hFCAD.arrEntities.Last, oE.fParam[2] * Pi / 180)
      appmain.hFCAD.arrEntities.Last.ClassHandler.Translate(appmain.hFCAD.arrEntities.Last, oE.p[0], oE.p[1])
    Next
  End If

End
