    paint.relmoveto(-lPix, 0)
    paint.relLineTo(0, -20) ' linea vertical 2
    paint.relmoveto(5, 5)
    paint.relLineTo(-10, 10) ' linea vertical 2
    paint.relmoveto(lPix, 0)
    paint.relLineTo(10, -10) ' linea vertical 2
    paint.Stroke
    If hText.Width * 0.8 < lPix Then
        paint.MoveTo(lPix / 2 - htext.Width / 2, htext.Height / 2 - 10 - e)
        Paint.Scale(1, -1)
        paint.Text(ltext)
    Endif

    paint.Stroke
    paint.Restore

End

Public Sub CreatePolygon(oE As Entity)

    ' checkk Viga / Beam to see how its done

    elem.Polygon.Clear

    Dim BpX, BpZ, l As Float, Rotated As Float[]
    l = puntos.distancia(elem.p[0], elem.p[1], elem.p[2], elem.p[3])

    ' From an unrotated point of view, our bouding points look like
    ' 1
    BpX = elem.p[0]
    BpZ = elem.p[1] - elem.fParam[0] / 2  ' thats wall thickness

    ' and, the rotated are

    rotated = puntos.RotateFromPointWithSinCos(elem.p[0], elem.p[1], (elem.p[3] - elem.p[1]) / l, (elem.p[2] - elem.p[0]) / l, BpX, Bpz)
    elem.Polygon.Insert(rotated)     ' pair

    ' 2
    BpX = elem.p[0] + l
    BpZ = elem.p[1] - elem.fParam[0] / 2

    ' and, the rotated are

    rotated = puntos.RotateFromPointWithSinCos(elem.p[0], elem.p[1], (elem.p[3] - elem.p[1]) / l, (elem.p[2] - elem.p[0]) / l, BpX, Bpz)
    elem.Polygon.Insert(rotated)     ' pair

    ' 3
    BpX = elem.p[0] + l
    BpZ = elem.p[1] + elem.fParam[0] / 2

    ' and, the rotated are

    rotated = puntos.RotateFromPointWithSinCos(elem.p[0], elem.p[1], (elem.p[3] - elem.p[1]) / l, (elem.p[2] - elem.p[0]) / l, BpX, Bpz)
    elem.Polygon.Insert(rotated)     ' pair

    ' 4
    BpX = elem.p[0]
    BpZ = elem.p[1] + elem.fParam[0] / 2

    ' and, the rotated are

    rotated = puntos.RotateFromPointWithSinCos(elem.p[0], elem.p[1], (elem.p[3] - elem.p[1]) / l, (elem.p[2] - elem.p[0]) / l, BpX, Bpz)
    elem.Polygon.Insert(rotated)     ' pair

End

