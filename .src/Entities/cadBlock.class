Public Sub Draw(oE As Entity)

  If oE.fParam.Count > 0 Then Return

  ' nothing

  Dim n As Integer = 0

  '''n = clsEntities.GetSelectionCount()
  ' en este caso necesitamos que esten seleccionadas dos o mas entidades
  If n < 2 Then

    DrawingAids.ErrorMessage = ("Select two or mores entities first")

  Else

    DrawingAids.HelperTrabajo = Str(n) & " entities selected, enter block name:"

  Endif

End

