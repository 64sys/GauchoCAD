' Importo los datos que puedo procesar de una coleccion y genero un Entity para ser agregado a un array
Public Function ImportJsonCol(c As Collection, e As Entity) As Boolean

  e.P.Add(c["center"][0])
  e.P.Add(c["center"][1])
  e.fParam.Add(c["radius"])

  Return True

End

