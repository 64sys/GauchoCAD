    Dim n As Integer

    For n = 1 To Len(o.ParamType)
        Select Case UCase(Mid(o.ParamType, n, 1))
            Case "P"
                o.p.add(0)
                o.p.add(0)
                o.level.add(0)
                o.b.add(0)
                o.b.add(0)
                o.psel.add(0)
            Case "F", "A", "M", "L"
                o.fParam.Add(0)

            Case "T"

            Case "C"

        End Select

    Next

End

