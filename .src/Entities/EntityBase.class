Public Sub DrawSelected(oE As Entity)

  ' A basic selected entity drawn from its polyline
  If oe.PolyLine.Count > 0 Then

    GLplus.PolyLines(oE.polyline, gcd.flgWindowBackColor, oE.LineWidth, gcd.stiDashed)
    GLplus.PolyLines(oE.PolyLine, gcd.ColorForSelected, oE.LineWidth, oE.LineType.Index)
  Endif

End

'' A fat version of the line
Public Sub DrawRemark(oE As Entity)

  If oe.Selected Then
    GLplus.Lines(oE.PolyLine, gcd.flgWindowBackColor, oE.LineWidth + 2, gcd.stiDashed)
    GLplus.Lines(oE.PolyLine, gcd.ColorForSelected, oE.LineWidth + 2, oe.linetype.index)
  Else
    GLplus.Lines(oE.PolyLine, gcd.flgWindowBackColor, oE.LineWidth, gcd.stiDashed)
    GLplus.Lines(oE.PolyLine, oE.ColorToPaint, oE.LineWidth + 2, oe.linetype.index)
  Endif

End

