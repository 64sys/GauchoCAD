Public Function BuildPOI(oE As Entity, Optional arrIndex As Integer = -1) As Integer
  ' points

  oe.PoiPoints.Clear
  oe.PoiType.Clear

  oe.poiPoints.insert([oE.p[0], oE.p[1]])
  oe.poiType.Add(gcd.poiBasePoint)
  'oe.poiEntities.Add(arrIndex)

End

