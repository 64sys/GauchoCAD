        APPMain.hFCAD.arrEntities.Add(newObj)

        ' leo todos los puntos X y los agrego directamente en el elemento , los guardo en un nuevo formato para poder serializar
        arrStr = Split(ent.Attributes["p"], ":")           ' "p=1:3:5:6:8"
