Public Sub GridView1_Select()

  Dim fl As FLayers1
  Dim fm As APPMain
  Dim vrx As Variant
  Dim iSty As Integer

  For Each vrx In Starter.cStyles
    If vrx[2] = GridView1[GridView1.Row, 1].Text Then
      iSty = CInt(Starter.cStyles.Key)
      Break
    Else
      iSty = -1
    Endif
  Next

  If GridView1.Row <> -1 Then
    Select xForm.Name
      Case "APPMain"
        fm = xForm
        fm.CurrentLtype = iSty
        fm.SelectingLtype = True
      Case "FLayers1"
        fl = xForm
        fl.CurrentLtype = iSty 'fl.CurrentLtype = GridView1[GridView1.Row, 1].Text
        fl.SelectingLtype = True
    End Select
  Endif

  Me.Close(True)

End

Public Sub GridView1_LostFocus()

  Dim fl As FLayers1
  Dim fm As APPMain

  Select xForm.Name
    Case "APPMain"
      fm = xForm
      fm.SelectingLtype = True
    Case "FLayers1"
      fl = xForm
      fl.SelectingLtype = True
  End Select

  Me.Close

End
