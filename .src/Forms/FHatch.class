' Gambas class file

Private entyHatch As New Entity[]

Public Sub form_Open()

    Dim sFilename As String

    For Each sFilename In Dir(Application.Path &/ "patterns", "*.dxf")

        ComboBox1.Add(Left$(sFilename, -4))
    Next

End

Public Sub ComboBox1_Click()

    entyHatch.Clear

    cadDxf.arrToFill = entyHatch

    cadDxf.LoadFile(Application.Path &/ "patterns" &/ ComboBox1.Text & ".dxf")

    DrawingArea1.Refresh

End

Public Sub DrawingArea1_Draw()

    Dim entidad As Entity

    Paint.Scale(2, 2)

    For Each entidad In entyHatch
        entidad.ClassHandler.draw2(entidad)
    Next

End

Public Sub btnCAncel_Click()

    gcd.clsJob.finish

End
