Public Sub Form_Open()

    Dim i As Integer
    Dim btn As ToolButton
    Dim crs As New String[]
    Dim img As Image
    Dim cr As Color
    Dim s As Integer
    Dim r As Integer
    Dim g As Integer
    Dim b As Integer
    Dim j As Integer
    Dim xPanel As Panel

    s = 20
    crs = cad.RGBColors()
    Me.W = ((s + 2) * 23) + 4
    Me.h = (s + 2) * 10 + pnlPrimary.H + pnlGray.H + Panel5.H
    'pnlColors.Arrangement = Arrange.None

    For i = 1 To 9
        r = CInt(Split(crs[i], ",")[0])
        g = CInt(Split(crs[i], ",")[1])
        b = CInt(Split(crs[i], ",")[2])
        img = New Image(s, s, Color.RGB(r, g, b), 0)

        btn = New ToolButton(pnlPrimary) As "Colour"
        With btn
            .H = pnlPrimary.H
            .W = pnlPrimary.H
            .Tooltip = CStr(i)
            .Tag = i
            .Name = "pic" & CStr(i)
            .Picture = img.Stretch(pnlPrimary.H - 8, pnlPrimary.H - 8).Picture
        End With
    Next
    For i = 250 To 255
        r = CInt(Split(crs[i], ",")[0])
        g = CInt(Split(crs[i], ",")[1])
        b = CInt(Split(crs[i], ",")[2])
        img = New Image(s, s, Color.RGB(r, g, b), 0)

        btn = New ToolButton(pnlGray) As "Colour"
        With btn
            .H = pnlGray.H
            .W = pnlGray.H
            .Tooltip = CStr(i)
            .Tag = i
            .Name = "pic" & CStr(i)
            .Picture = img.Stretch(pnlGray.H - 8, pnlGray.H - 8).Picture
        End With
    Next

    For j = 0 To 9
        xPanel = Me.Controls["pnlC" & CStr(j + 1)]

        For i = 10 To 240 Step 10
            r = CInt(Split(crs[i + j], ",")[0])
            g = CInt(Split(crs[i + j], ",")[1])
            b = CInt(Split(crs[i + j], ",")[2])
            img = New Image(s, s, Color.RGB(r, g, b), 0)

            btn = New ToolButton(xPanel) As "Colour"
            With btn
                .H = xPanel.H
                .W = xPanel.H
                .Tooltip = CStr(i + j)
                .Tag = i + j
                .Name = "pic" & CStr(i + j)
                .Picture = img.Stretch(xPanel.H - 8, xPanel.H - 8).Picture
            End With
        Next

    Next

End

Public Sub Colour_Click()

    Dim obj As Object

    obj = Last

    iCurrentColor = obj.Tag

    APPMain.SelectedColour = True
    APPMain.CurrentColor = iCurrentColor

    Me.Close

End

Public Sub Colour_GotFocus()

    Dim obj As Object

    obj = Last

    iCurrentColor = obj.Tag
    TextBox1.Text = obj.Tag

End
