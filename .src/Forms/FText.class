Private Coords As Integer[]
Private etx As Entity

Public Sub _new(cor As Integer[], e As Entity)
  'frm As Form

  Coords = cor
  etx = e

End

Private ready As Boolean

Public Sub Run() As Boolean

  Me.Show

End

Public Sub Form_Open()

  txoEdit.Text = etx.StringData[0] 'APPMain.CurrentText
  vaoAngle.Value = etx.fParam[0]
  vaoHeight.Value = etx.fParam[1]

  Me.Move(Coords[0], Coords[1] - Me.H)
  ready = True

End

Public Sub Form_KeyPress()

  If ready = True Then
    Select Key.Code
      Case Key.Enter, Key.Return
        'APPMain.CurrentText = txoEdit.Text
        etx.StringData[0] = txoEdit.Text
        etx.fParam[0] = vaoAngle.Value
        etx.fParam[1] = vaoHeight.Value

        APPMain.EditingText = True
        'etx.StringData[0]
        Me.Close

      Case Key.Esc, Key.Escape
        APPMain.EditingText = True
        Me.Close

    End Select

  Endif

End

Public Sub btnSave_Click()

  'APPMain.CurrentText = txoEdit.Text
  etx.StringData[0] = txoEdit.Text
  etx.fParam[0] = vaoAngle.Value
  etx.fParam[1] = vaoHeight.Value

  APPMain.EditingText = True
  Me.Close

End

Public Sub btnCancel_Click()

  'APPMain.CurrentText = txoEdit.Text
  APPMain.EditingText = True
  Me.Close

End
